# Option Quant Trade System Environment Variables
# Copy this file to .env and fill in your values

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# Futu OpenAPI Configuration (optional, defaults shown)
# Note: Futu only provides HK market data for this account
FUTU_HOST=127.0.0.1
FUTU_PORT=11111

# IBKR TWS/Gateway API Configuration (for US market data)
# Requires TWS or IB Gateway running locally
#
# IBKR_APP_TYPE: "tws" or "gateway" (default: tws)
# This determines which port mapping is used:
#   TWS ports: Paper=7497, Live=7496
#   Gateway ports: Paper=4002, Live=4001
#
# When account_type is specified (e.g., -a paper), the system
# automatically selects the correct port based on IBKR_APP_TYPE.
IBKR_HOST=127.0.0.1
IBKR_APP_TYPE=tws
# IBKR_PORT is optional - if not set, port is auto-selected by account_type
# IBKR_PORT=7497
IBKR_CLIENT_ID=1

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
